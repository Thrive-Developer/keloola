{
  "name": "keloola-n8n-nodes-collection",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Thrive-Developer/keloola.git"
  },
  "homepage": "https://github.com/Thrive-Developer/keloola#readme",
  "scripts": {
    "prebuild": "for d in n8n-nodes-keloola-*; do (cd \"$d\" && bun run node_modules/@repo/support/generate-env.ts); done",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "link:nodes": "for d in n8n-nodes-keloola-*; do (cd \"$d\" && bun link); done",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "check-types": "turbo run check-types",
    "clean": "./cleanup.sh",
    "clean:all": "./cleanup.sh --all"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.8.1",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "n8n-nodes-*",
    "support"
  ]
}
