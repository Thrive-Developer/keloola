{
  "name": "keloola-n8n-nodes-collection",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/Thrive-Developer/keloola.git"
  },
  "homepage": "https://github.com/Thrive-Developer/keloola#readme",
  "scripts": {
    "prebuild": "./prebuild.sh",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "./prebuild.sh && turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "link:nodes": "./link-nodes.sh",
    "format": "prettier --write \"**/*.{ts,tsx}\"",
    "format:check": "turbo run format:check",
    "check-types": "./prebuild.sh && turbo run check-types",
    "clean": "./cleanup.sh",
    "clean:all": "./cleanup.sh --all",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "prettier": "^3.7.4",
    "turbo": "^2.8.5",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "n8n-nodes-*",
    "support"
  ]
}
